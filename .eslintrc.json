{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "extends": ["airbnb-typescript/base", "prettier"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/no-use-before-define": "off",
    "no-param-reassign": "off",
    "consistent-return": "off",
    "no-plusplus": "off",
    "no-multi-assign": "off",
    "no-cond-assign": "off",
    "prefer-destructuring": "off",
    "no-continue": "off"
  }
}
